title		Knoppix {{ knoppix_version }} Poor Man's Installation - no image - , ro, 64bit, kernel {{ kernel_version }} 
root		(hd0,{{ boot_pnum - 1 }})
kernel          /boot/vmlinuz-{{ kernel_version }}-64 root=/dev/{{ boot_disk }}{{ boot_pnum }} ro ramdisk_size=100000 lang=de apm=power-off nomce quiet xmodule=vmware fromhd=/dev/{{ boot_disk }}{{ boot_pnum }} myconf=/dev/{{ conf_disk }}{{ conf_pnum }} noimage
initrd		/boot/minirt.gz
savedefault

title		Knoppix {{ knoppix_version }} Poor Man's Installation - no image - , rw, 64bit, kernel {{ kernel_version }} 
